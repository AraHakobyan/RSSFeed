<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RssStyle" />

    <style name="RssStyle.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RssStyle.TextView.Special">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_special</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="RssStyle.TextView.Info">
        <item name="android:textSize">@dimen/text_size_info</item>
        <item name="android:padding">@dimen/padding_extra_small</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RssStyle.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="RssStyle.ScrollBar">
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>